<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page trimDirectiveWhitespaces="true" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<head>
<style>
.titlebox{
	margin:0 auto;
	background: #ffd900;
    width: 300px;
    height: 50px;
    color: white;
    font-size: 20px;
    text-align: center;
    font-weight:bold;
    line-height: 50px;
}
.project-info{
	margin: 0 auto;
	margin-top:100px;
	width:500px;
}
.project-info-item{
	box-shadow: 2px 2px 10px silver;
	margin-bottom:30px;
	display: inline-block;
	border-radius:5px;
	width:100%;
}
.item-front{
	float:left;
	padding:10px;
	width:10%;
	height:100%;
	background: #ffd900;
	text-align: center;
	font-weight: bold;
}
.item-content{
	float: left;
	width:90%;
	padding:10px;
	height:100%;
	background: white;
}
.btn-wrapper{
	width:100%;
	display: flex;
	justify-content: space-between;
}
button{
    width: 120px;
}
</style>
</head>
<body style="padding: 40px; background: white;">

<a href="javascript:history.go(-1)" style="color:black">
	<i class="ion ion-md-arrow-round-back fa-2x fa-fw float-start me-10px text-black-lighter"></i>
	<span style="font-size: 16px;">뒤로가기</span>
</a>
<div class="titlebox">${pro.pName }</div>
<div class="project-info">
	<div class="project-info-item">
		<div class="item-front">주제</div>
		<div class="item-content">${pro.pTitle }</div>
	</div>
	<div class="project-info-item">
		<div class="item-front">개요</div>
		<div class="item-content">${pro.pSummary }</div>
	</div>
	<div class="project-info-item">
		<div class="item-front" style="min-height:200px;">내용</div>
		<div class="item-content" style="min-height:200px;">${pro.pContent }</div>
	</div>
	<div class="btn-wrapper">
		<button class="btn btn-primary" onclick="OpenWindow('ProModifyForm.do?pCode=${pro.pCode}','프로젝트 수정',900,900);">수정</button>
		<button class="btn btn-primary" onclick="OpenWindow('','프로젝트 등록',900,900);">프로젝트 이관</button>
		<c:if test="${pro.pEnabled == '0' }">
			<button type="button" class="btn btn-primary" onclick="doPro();">활성화</button>
		</c:if>
		<c:if test="${pro.pEnabled == '1' }">
			<button type="button" class="btn btn-primary" onclick="doNotPro();">비활성화</button>
		</c:if>
	</div>
	
</div>


<form id="pp" action="<%=request.getContextPath() %>/project/doNotPro.do" method="post">
	<input name="pCode" hidden="" value="${pro.pCode }">
</form>

<form id="pd" action="<%=request.getContextPath() %>/project/doPro.do" method="post">
	<input name="pCode" hidden="" value="${pro.pCode }">
</form>


<script>

function doNotPro(){
		
		if(confirm("프로젝트를 비활성화 하게시겠습니까? 다시 활성화 할수 있습니다.")){
		
			var form=document.getElementById('pp');
			
			form.submit();
			
	}else{
		
		
		return;
		
	}
	
	
	
	
}


function doPro(){
	
	
			if(confirm("프로젝트를 활성화 하게시겠습니까? 다시 비활성화 할수 있습니다.")){
				
				var form=document.getElementById('pd');
				
				form.submit();
				
		}else{
			
			
			return;
			
		}
	
	
}


</script>







</body>


